{
  "manifest_version": 2,
  "name": "Just Meet",
  "version": "1.0",

  "description": "Just open Google Meet on new tab",
  "homepage_url": "https://github.com/mrpronr/just-meet",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Just Meet"
  }
}
